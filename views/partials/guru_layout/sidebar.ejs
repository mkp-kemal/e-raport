<% stuff = typeof stuff !== 'object' ? {} : stuff %>
<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

  <!-- sidebar: style can be found in sidebar.less -->
  <section class="sidebar">

    <!-- Sidebar user panel (optional) -->
    <div class="user-panel">
      <div class="pull-left image">
        <img src="/adminlte/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
      </div>
      <div class="pull-left info">
        <p><%= user.nama %></p>
        <!-- Status -->
        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
      </div>
    </div>

    <!-- Sidebar Menu -->
    <ul class="sidebar-menu" data-widget="tree">
      <!-- Optionally, you can add icons to the links -->
      <li class="<% if ( stuff.url == "/guru" ) { %> active <% } %>">
        <a href="/guru"> <i class="fa fa-home"></i> <span>Dashboard</span></a>
      </li>
      <li class="<% if ( stuff.url == "/guru/guru" ) { %> active <% } %>">
        <a href="/guru/matpel"><i class="fa fa-book"></i> <span>Matpel Diampu</span></a>
      </li>
      <li class="<% if ( stuff.url == "/guru/riwayat-mengajar" ) { %> active <% } %>">
        <a href="/guru/riwayat-mengajar"><i class="fa fa-bookmark"></i> <span>Riwayat Mengajar</span></a>
      </li>
    </ul>
    <!-- /.sidebar-menu -->
  </section>
  <!-- /.sidebar -->
</aside>