<!-- page script -->
<script>
  $(document).ready(function () {
    // datatable
    $('#kelompok').DataTable()
  })

  function delete_set_matpel_guru(id) {
    swal({
      title: "Yakin Ingin Menghapus ini?",
      text: "Data yang dihapus, tidak bisa kembali lagi.",
      icon: "warning",
      buttons: true,
      dangerMode: true
    }).then(willDelete => {
      if (willDelete) {
        swal({
          title: "Success",
          text: "Success Hapus Data Mata Pelajaran",
          icon: "success",
          buttons: false,
          timer: 2000
        }).then(suksesDelete => {
          window.location.assign(`/admin/set-matpel/${id}`);
        });
      }
    });
  }


</script>