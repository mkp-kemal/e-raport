<div class="modal fade" id="add-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add Mata Pelajaran Guru</h4>
      </div>
      <form role="form" action="/admin/set-matpel" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label>Pilih Guru</label>
            <select required name="GuruId" class="form-control">
              <option value="" class="bg-blue"></option>
              <% for(let i = 0; i < guru.length; i++) { %>
              <option value="<%= guru[i].id %>"><%= guru[i].nama %></option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label>Pilih Mata Pelajaran</label>
            <select required name="MatpelId" class="form-control">
              <option value="" class="bg-blue"></option>
              <% for(let i = 0; i < mata_pelajaran.length; i++) { %>
              <option value="<%= mata_pelajaran[i].id %>"><%= mata_pelajaran[i].nama %></option>
              <% } %>
            </select>
          </div>
          <div class="form-group">
            <label>Pilih Kelas</label>
            <select required name="KelasId" class="form-control">
              <option value="" class="bg-blue"></option>
              <% for(let i = 0; i < kelas.length; i++) { %>
              <option value="<%= kelas[i].id %>"><%= kelas[i].nama %></option>
              <% } %>
            </select>
          </div>

        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>

    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>